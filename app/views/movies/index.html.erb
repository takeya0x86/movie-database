<div class="row my-3">
  <div class="col">
    <h1>Movies</h1>
  </div>
</div>

<div class="row my-3">
  <div class="col-2 offset-10">
    <%= link_to 'New Movie', new_movie_path, class: "btn btn-success", role: "button" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Release date</th>
      <th>Director</th>
      <th>Series</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie %></td>
        <td><%= movie.release_date %></td>
        <td>
          <% if movie.director %>
            <%= link_to movie.director.name, movie.director %>
          <% end %>
        </td>
        <td>
          <% if movie.series %>
            <%= link_to movie.series.name, movie.series %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
