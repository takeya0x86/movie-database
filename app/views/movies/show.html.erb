<div class="row">
  <div class="col">
    <h1 class="my-3">
      <%= @movie.title %>
      <br>
      <small class="text-muted">
        <% if !@movie.original_title.blank? %>
          <%= @movie.original_title %>
        <% elsif !@movie.english_title.blank? %>
          <%= @movie.english_title %>
        <% end %>
      </small>
    </h1>
  </div>
</div>

<div class="row my-3">
  <div class="col-2 offset-10">
    <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-success", role: "button" %>
    <%= link_to 'Delete', @movie, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }, role: "button" %>
  </div>
</div>

<dl class="row">
  <dt class="col-2">Release date</dt>
  <dd class="col-10"><%= @movie.release_date %></dd>
  <dt class="col-2">Director</dt>
  <dd class="col-10">
    <% if @movie.director %>
      <%= link_to @movie.director.name, @movie.director %>
    <% end %>
    <% if @movie.director2 %>
      <br><%= link_to @movie.director2.name, @movie.director2 %>
    <% end %>
    <% if @movie.director3 %>
      <br><%= link_to @movie.director3.name, @movie.director3 %>
    <% end %>
    <% if @movie.director4 %>
      <br><%= link_to @movie.director4.name, @movie.director4 %>
    <% end %>
    <% if @movie.director5 %>
      <br><%= link_to @movie.director5.name, @movie.director5 %>
    <% end %>
  </dd>
  <dt class="col-2">Series</dt>
  <dd class="col-10">
    <% if @movie.series %>
      <%= link_to @movie.series.name, @movie.series %>
    <% end %>
  </dd>
  <dt class="col-2">Running time</dt>
  <dd class="col-10"><%= @movie.running_time %></dd>
</dl>
