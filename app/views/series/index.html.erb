<div class="row my-3">
  <div class="col">
    <h1>Series</h1>
  </div>
</div>

<div class="row my-3">
  <div class="col-2 offset-10">
    <%= link_to 'New Series', new_series_path, class: "btn btn-success", role: "button" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr class="row">
      <th scope="col" class="col-10">Name</th>
      <th scope="col" class="col-2"></th>
    </tr>
  </thead>
  <tbody>
    <% @series.each do |series| %>
      <tr class="row">
        <td class="col-10"><%= link_to series.name, series %></td>
        <td class="col-2"><%= series.movies.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
