<div class="row">
  <div class="col">
    <h1 class="my-3">
      <%= @series.name %>
      <br>
      <small class="text-muted">
        <%= @series.original_name %>
      </small>
    </h1>
  </div>
</div>

<div class="row my-3">
  <div class="col-2 offset-10">
    <%= link_to 'Edit', edit_series_path(@series), class: "btn btn-success", role: "button" %>
    <%= link_to 'Delete', @series, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }, role: "button" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr class="row">
      <th class="col-6">Title</th>
      <th class="col-2">Release date</th>
      <th class="col-4">Director</th>
    </tr>
  </thead>

  <tbody>
    <% @series.movies.order(:release_date).includes(:director).each do |movie| %>
      <tr class="row">
        <td class="col-6"><%= link_to movie.title, movie %></td>
        <td class="col-2"><%= movie.release_date %></td>
        <td class="col-4">
          <% if movie.director %>
            <%= link_to movie.director.name, movie.director %>
          <% end %>
          <% if movie.director2 %>
            <br><%= link_to movie.director2.name, movie.director2 %>
          <% end %>
          <% if movie.director3 %>
            <br><%= link_to movie.director3.name, movie.director3 %>
          <% end %>
          <% if movie.director4 %>
            <br><%= link_to movie.director4.name, movie.director4 %>
          <% end %>
          <% if movie.director5 %>
            <br><%= link_to movie.director5.name, movie.director5 %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
