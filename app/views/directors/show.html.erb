<div class="row">
  <div class="col">
    <h1 class="my-3">
      <%= @director.name %>
      <br>
      <small class="text-muted">
        <%= @director.original_name %>
      </small>
    </h1>
  </div>
</div>

<div class="row my-3">
  <div class="col-2 offset-10">
    <%= link_to 'Edit', edit_director_path(@director), class: "btn btn-success", role: "button" %>
    <%= link_to 'Delete', @director, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }, role: "button" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr class="row">
      <th class="col-6">Title</th>
      <th class="col-2">Release date</th>
      <th class="col-4">Series</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr class="row">
        <td class="col-6"><%= link_to movie.title, movie %></td>
        <td class="col-2"><%= movie.release_date %></td>
        <td class="col-4">
          <% if movie.series %>
            <%= link_to movie.series.name, movie.series %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
